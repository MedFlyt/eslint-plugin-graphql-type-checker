{
  "name": "@medflyt/eslint-plugin-graphql-type-checker",
  "version": "5.0.0",
  "description": "ESLint plugin that generates & validates TypeScript type annotations for GraphQL queries",
  "main": "./dist/rules.js",
  "author": "MedFlyt",
  "license": "MIT",
  "keywords": [
    "eslint",
    "plugin",
    "gql",
    "template",
    "literal",
    "graphql",
    "typescript",
    "validation",
    "generated",
    "types",
    "typings"
  ],
  "files": [
    "dist/**/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MedFlyt/eslint-plugin-graphql-type-checker.git"
  },
  "bugs": {
    "url": "https://github.com/MedFlyt/eslint-plugin-graphql-type-checker/issues"
  },
  "homepage": "https://github.com/MedFlyt/eslint-plugin-graphql-type-checker#readme",
  "scripts": {
    "build": "tsc -p ./tsconfig.json",
    "build-watch": "pnpmn build -- --watch",
    "clean": "rm -rf dist",
    "install-demo": "cd src/demo && pnpm install",
    "lint-demo-queries": "eslint --ext .ts src/demo/queries",
    "lint-watch-demo-queries": "nodemon --watch dist --watch src/demo/queries --exec 'pnpm lint-demo-queries'",
    "prepublishOnly": "pnpm clean && pnpm build && pnpm test",
    "prettier-check": "prettier -l '**/*.{ts,tsx,js,scss}'",
    "prettier-fix": "pnpm prettier-check -- --write",
    "test": "jest",
    "test-watch": "npm test -- --watch"
  },
  "dependencies": {
    "@typescript-eslint/parser": "^5.50.0",
    "@typescript-eslint/utils": "^5.50.0",
    "graphql": "^16.6.0",
    "prettier": "^2.8.3",
    "zod": "^3.20.2",
    "zod-to-json-schema": "^3.20.2"
  },
  "devDependencies": {
    "@types/eslint": "^8.21.0",
    "@types/json-schema": "^7.0.11",
    "@types/node": "^18.11.19",
    "@types/prettier": "^2.7.2",
    "@typescript-eslint/eslint-plugin": "^5.50.0",
    "eslint": "^8.33.0",
    "graphql-tag": "^2.12.6",
    "jest": "^29.4.1",
    "nodemon": "^2.0.20",
    "ts-jest": "^29.0.5",
    "typescript": "^4.9.5"
  },
  "peerDependencies": {
    "graphql": "^15.5.0"
  }
}
